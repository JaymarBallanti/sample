<h1>Sample Sales</h1>
<%= link_to 'New Sale', new_sale_path %>
<h1>Listing Sales</h1>
 
<table>
  <tr>
    <th>Customer Name</th>
    <th>Address</th>
    <th>Sales Person</th>
    <th colspan="3"></th>
  </tr>
 
  <% @sales.each do |sale| %>
    <tr>
      <td><%= sale.customer_name %></td>
      <td><%= sale.address %></td>
      <td><%= sale.sales_person %></td>
      <td><%= link_to 'Show', sale_path(sale) %></td>
      <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
      <td><%= link_to 'Destroy', sale_path(sale),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
