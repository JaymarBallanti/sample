<%= form_for([@sale, @sale.items.build]) do |f| %>
  <p>
    <%= f.label :item_name %><br>
    <%= f.text_field :item_name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :SKU %><br>
    <%= f.text_field :SKU %>
  </p>
  <p>
    <%= f.label :cost_price %><br>
    <%= f.text_field :cost_price %>
  </p>
  <p>
    <%= f.label :retail_price %><br>
    <%= f.text_field :retail_price %>
  </p>
  <p>
    <%= f.label :date_sold %><br>
    <%= f.datetime_select :date_sold %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>